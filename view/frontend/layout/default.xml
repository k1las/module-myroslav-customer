<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="header">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Myroslav_Customer::html/header.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="status-link">
                <arguments>
                    <argument name="path" xsi:type="string">myroslav_customer/status/edit</argument>
                    <argument name="label" xsi:type="string">Customer Status Edit</argument>
                    <argument name="sortOrder" xsi:type="number">150</argument>
                </arguments>
            </block>
        </referenceBlock>

    </body>
</page>
